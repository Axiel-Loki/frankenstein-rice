            "stopped": "‚èπ"
        },
        "tooltip-format": "{title} - {artist}\nAlbum: {album}",
        "tooltip": true,
        "interval": 1,
        "max-length": 30,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-scroll-up": "playerctl previous",
        "on-scroll-down": "playerctl next"
    },

    "group/tray-expander": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "tray-group-item"
        },
        "modules": ["custom/expand-icon", "bluetooth","cpu", "memory","temperature", "tray"]
    },

    "custom/expand-icon": {
        "format": "ÔÇã ",
