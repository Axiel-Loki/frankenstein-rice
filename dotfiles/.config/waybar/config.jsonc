        "dnd-inhibited-notification": "Ó∞à",
        "dnd-inhibited-none": "Ó∞à"
      },        "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "escape": true,
      "on-click": "swaync-client -t -sw",
      "on-click-right": "swaync-client -d -sw"
    },

    "cpu": {
    "format": "{icon}",
    "format-icons": ["Û∞çõ "],
