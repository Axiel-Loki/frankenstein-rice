{
    "layer": "top",
    "position": "top",
    "height": 24,
    "spacing": 5,
    
    "modules-left": ["custom/archicon", "hyprland/workspaces"],
    "modules-center": ["mpris"],
    "modules-right": ["group/tray-expander", "custom/power", "network", "pulseaudio", "backlight", "battery", "clock"],

    "custom/archicon": {
        "format": " ÔåÉ",
        "tooltip": false
    },

    "hyprland/workspaces": {
        "format": "<span size='larger'>{icon}</span>",
        "on-click": "activate",
        "format-icons": {
            "active": "\uf444",
            "default": "\uf4c3"
        },
        "icon-size": 10,
        "sort-by-number": true,
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": []
        }
    },

    "mpris": {
        "format": "{artist} - {title}",
        "format-paused": "{status_icon} {artist} - {title}",
        "format-stopped": "",
        "format-disconnected": "",
        "player-icons": {
            "default": "üéµ",
            "spotify": "ÔÜº",
            "firefox": "Ôâ©",
            "chromium": "Ôâ®"
        },
        "status-icons": {
            "paused": "‚è∏",
            "playing": "‚ñ∂",
            "stopped": "‚èπ"
        },
        "tooltip-format": "{title} - {artist}\nAlbum: {album}",
        "tooltip": true,
        "interval": 1,
        "max-length": 30,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-scroll-up": "playerctl previous",
        "on-scroll-down": "playerctl next"
    },

    "group/tray-expander": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "tray-group-item"
        },
        "modules": ["custom/expand-icon", "bluetooth", "tray"]
    },

    "custom/expand-icon": {
        "format": "ÔÇã ",
        "tooltip": false
    },

    "tray": {
        "icon-size": 16,
        "spacing": 13
    },

    "custom/power": {
        "format": "‚èª ",
        "tooltip": "Menu de energia",
        "on-click": "wlogout",
        "on-click-right": "systemctl suspend"
    },

    "network": {
        "format": "{icon}",
        "format-wifi": "{icon}",
        "format-ethernet": "Ôûñ",
        "tooltip-format": "{essid}",
        "format-linked": "Ôõø {ifname} (No IP)",
        "format-disconnected": "Û∞§Æ ",
        "tooltip": true,
        "on-click": "kitty --class float -e nmtui",
        "format-icons": ["Û∞§Ø ", "Û∞§ü ", "Û∞§¢ ", "Û∞§• ", "Û∞§® "]
    },

    "pulseaudio": {
        "scroll-step": 5,
        "format": "{icon}",
        "format-bluetooth": "{icon} Ôäî {volume}%",
        "format-bluetooth-muted": "{icon} Ôäî 0%",
        "format-muted": "Óª®",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ± ",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pamixer --toggle-mute",
        "tooltip-format": "{volume}%",
        "tooltip": true
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "tooltip": true,
        "tooltip-format": "{percent}%",
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
        "on-click": "kitty --class float -e nano ~/.config/hypr/settings/monitors.conf",
        "scroll-step": 5
    },

    "battery": {
        "states": {
            "warning": 40,
            "critical": 20
        },
        "format": "{icon}",
        "format-charging": "Ó¨≠ {icon}",
        "format-plugged": "Ó¨≠ {icon}",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
        "interval": 3,
        "on-click": "kitty --class float -e sudo nano /etc/auto-cpufreq.conf",
        "on-click-right": "kitty --class float -e sudo nano /sys/class/power_supply/BAT*/charge_control_end_threshold",
        "tooltip-format": "Battery: {capacity}%"
    },

    "clock": {
        "timezone": "America/Sao_Paulo",
        "format": "{:%a %d %b %H:%M}",
        "interval": 1,
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#908d89'><b>{}</b></span>",
                "days": "<span color='#ffffff'><b>{}</b></span>",
                "today": "<span color='#908d89'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    "bluetooth": {
        "format": "Û∞Ç≤",
        "format-on": "{icon}",
        "format-off": "{icon}",
        "format-connected": "{icon}",
        "format-icons": {
            "on": "Û∞ÇØ",
            "off": "Û∞Ç≤",
            "connected": "Û∞Ç±"
        },
        "on-click": "blueman-manager",
        "tooltip-format-connected": "{device_enumerate}"
    }
}