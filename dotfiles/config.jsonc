{
    "layer": "top",
    "position": "top",
    "height": 25,
    // "spacing": 5,
    "margin": 1,
    
    "modules-left": ["custom/archicon", "hyprland/workspaces"],
    "modules-center": [],
    "modules-right": ["group/tray-expander", "custom/notification", "custom/brightness", "group/mpris-expander", "custom/power", "network", "pulseaudio", "battery", "clock"],

    "custom/archicon": {
        "format": " ÔåÉ",
        "tooltip": "Abrir FastFetch",
        "on-click": "kitty --class float -e fastfetch",
        "on-click-right": "kitty --title FastFetch -e fastfetch --load-config minimal",
        "interval": 1
    },

    "hyprland/workspaces": {
        "format": "<span size='larger'>{icon}</span>",
        "on-click": "activate",
        "format-icons": {
            "active": "\uf444",
            "default": "\uf4c3"
        },
        "icon-size": 10,
        "sort-by-number": true,
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": []
        }
    },

    "group/mpris-expander": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "mpris-group-item"
        },
        "modules": ["custom/music-icon", "mpris"]
    },

    "custom/music-icon": {
        "format": "ÔîÄ",
        "tooltip": false
    },

    "mpris": {
        "format": "{artist} - {title}",
        "format-paused": "{artist} - {title}",
        "format-stopped": "",
        "format-disconnected": "",
        "player-icons": {
            "default": "üéµ",
            "spotify": "ÔÜº",
            "firefox": "Ôâ©",
            "chromium": "Ôâ®"
        },
        "status-icons": {
            "paused": "Û∞è¶",
            "playing": "ÔîÄ",
            "stopped": "ÓÆ•"
        },
        "tooltip-format": "{title} - {artist}\nAlbum: {album}",
        "tooltip": true,
        "interval": 1,
        "max-length": 30,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-scroll-up": "playerctl previous",
        "on-scroll-down": "playerctl next"
    },

    "group/tray-expander": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "tray-group-item"
        },
        "modules": ["custom/expand-icon", "bluetooth", "cpu", "memory", "disk", "temperature", "tray"]
    },

    "custom/expand-icon": {
        "format": "ÔÇã",
        "tooltip": false
    },

    "bluetooth": {
        "format": "Û∞Ç≤",
        "format-on": "{icon}",
        "format-off": "{icon}",
        "format-connected": "{icon}",
        "format-icons": ["Û∞ÇØ", "Û∞Ç∞", "Û∞Ç±", "Û∞Ç≤"],
        "on-click": "blueman-manager",
        "tooltip-format-connected": "{device_enumerate}"
    },

    "cpu": {
        "format": "{icon}",
        "format-icons": ["Ôíº"],
        "states": {
            "warning": 70,
            "critical": 90
        },
        "tooltip": true,
        "tooltip-format": "CPU: {usage}% ({avg_frequency} GHz)\n{load}",
        "interval": 2
    },

    "memory": {
        "format": "ÓøÖ",
        "format-alt": "Û∞ìÖ",
        "interval": 5,
        "states": {
            "warning": 70,
            "critical": 90
        },
        "tooltip": true,
        "tooltip-format": "Mem√≥ria: {used:0.1f}GiB/{total:0.1f}GiB ({percentage}%)\nSwap: {swapUsed:0.1f}GiB/{swapTotal:0.1f}GiB"
    },

    "disk": {
        "format": "Û∞ãä",
        "format-alt": "{free} free",
        "path": "/",
        "interval": 60,
        "tooltip-format": "Storage\nPath: {path}\nTotal: {total}\nUsed: {used}\nFree: {free}",
        "tooltip": true,
        "states": {
            "warning": 75,
            "critical": 90
        },
        "on-click": "thunar",
        "on-click-right": "baobab"
    },

    "temperature": {
        "thermal-zone": 0,
        "hwmon-path": "/sys/class/hwmon/hwmon0/temp1_input",
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": ["Ôãã", "Ôãä", "Ôãâ", "Ôãà", "Ôãá"],
        "tooltip": true,
        "interval": 5
    },

    "tray": {
        "icon-size": 16,
        "spacing": 13
    },

    "custom/notification": {
        "tooltip": false,
        "format": "{icon} ",
        "format-icons": ["Û∞Çú", "Û∞Ö∏", "Û∞™ë"],
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "escape": true,
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw"
    },

    "custom/brightness": {
        "format": "Ôî¢",
        "tooltip": true,
        "tooltip-format": "Brilho: {percent}%",
        "exec": "~/.config/waybar/scripts/brightness.sh",
        "on-click": "brightnessctl -d intel_backlight set 10%+",
        "on-click-right": "brightnessctl -d intel_backlight set 10%-",
        "on-scroll-up": "brightnessctl -d intel_backlight set 1%+",
        "on-scroll-down": "brightnessctl -d intel_backlight set 1%-",
        "interval": 5,
        "return-type": "json"
    },

    "custom/power": {
        "format": "ÔÄë",
        "tooltip": "Menu de energia",
        "on-click": "wlogout",
        "on-click-right": "systemctl suspend"
    },

    "network": {
        "format": "{icon}",
        "format-wifi": "Û∞ñ©",
        "format-ethernet": "Ôõø",
        "tooltip-format": "{essid}",
        "format-linked": "Ôõø {ifname} (No IP)",
        "format-disconnected": "Û∞ñ™",
        "tooltip": true,
        "on-click": "kitty --class float -e nmtui",
        "format-icons": ["Û∞ñ©", "Û±öµ"]
    },

    "pulseaudio": {
        "scroll-step": 5,
        "format": "{icon}",
        "format-bluetooth": "{icon} Ôäî {volume}%",
        "format-bluetooth-muted": "{icon} Ôäî 0%",
        "format-muted": "Óª®",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pamixer --toggle-mute",
        "tooltip-format": "{volume}%",
        "tooltip": true
    },

    "battery": {
        "states": {
            "warning": 40,
            "critical": 20
        },
        "format": "{icon}",
        "format-charging": "Ó¨≠ {icon}",
        "format-plugged": "Ó¨≠ {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "interval": 3,
        "on-click": "kitty --class float -e sudo nano /etc/auto-cpufreq.conf",
        "on-click-right": "kitty --class float -e sudo nano /sys/class/power_supply/BAT*/charge_control_end_threshold",
        "tooltip-format": "{capacity}%"
    },

    "clock": {
        "timezone": "America/Sao_Paulo",
        "format": "{:%a %d %b %H:%M}",
        "interval": 1,
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#908d89'><b>{}</b></span>",
                "days": "<span color='#ffffff'><b>{}</b></span>",
                "today": "<span color='#908d89'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    }
}